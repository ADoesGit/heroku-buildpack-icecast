#!/bin/sh -e

AWESOME_VM_BINARY="http://downloads.xiph.org/releases/icecast/icecast-2.4.4.tar.gz"
AWESOME_VM_VENDOR="vendor/icecast"

# vendor awesome-vm
mkdir -p $1/$AWESOME_VM_VENDOR
curl $AWESOME_VM_BINARY -o -
tar -xz ./icecast-2.4.4.tar.gz

indent() {
  sed -u 's/^/       /'
}

echo "-----> Found an icecast.xml file"

if [ ! -s $1/config/icecast.xml ]; then
  echo "icecast.xml was empty"
  exit 1
else
  exit 0
fi
